<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adiaz.deportesmadrid">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DistrictActivity"></activity>
        <activity android:name=".activities.FavoritesActivity"></activity>
        <activity android:name=".activities.CategoriesActivity"></activity>
        <activity android:name=".activities.GroupsActivity"></activity>
        <activity android:name=".activities.TeamDetailsActivity"></activity>
        <activity android:name=".activities.GroupDetailsActivity"></activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/action_preferences"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/MyPreferencelTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <provider
            android:name="com.adiaz.deportesmadrid.contentproviders.CompetitionsProvider"
            android:authorities="com.adiaz.deportesmadrid"
            android:exported="false"/>
    </application>
</manifest>