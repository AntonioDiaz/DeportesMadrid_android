<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adiaz.deportesmadrid">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DistrictActivity"></activity>
        <activity android:name=".activities.FavoritesActivity"></activity>
        <activity android:name=".activities.CategoriesActivity"></activity>
        <activity android:name=".activities.GroupsActivity"></activity>
        <activity android:name=".activities.TeamDetailsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".activities.CompetitionDetailsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        </activity>
        <provider
            android:name="com.adiaz.deportesmadrid.contentproviders.CompetitionsProvider"
            android:authorities="com.adiaz.deportesmadrid"
            android:exported="false"/>
    </application>
</manifest>