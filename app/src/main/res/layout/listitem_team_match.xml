<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_listitem"
        style="@style/main_list_generic">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Jornada 01" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <TextView
                android:id="@+id/tv_local_visitor"
                style="@style/team_calendar"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:gravity="left|center_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_week"
                app:layout_constraintEnd_toStartOf="@+id/tv_score"
                app:layout_constraintStart_toEndOf="@+id/tv_week"
                app:layout_constraintTop_toTopOf="@+id/tv_week"
                tools:text="Local" />

            <TextView
                android:id="@+id/tv_opponent_label"
                android:layout_marginTop="4dp"
                android:text="@string/calendar_openent"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/tv_week"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                style="@style/team_calendar_labels" />

            <TextView
                android:id="@+id/tv_opponent"
                style="@style/team_calendar"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/tv_opponent_label"
                tools:text="Club Atletico de Madrid." />

            <TextView
                android:id="@+id/tv_date_label"
                android:layout_marginTop="4dp"
                android:text="@string/calendar_date"
                app:layout_constraintEnd_toEndOf="@+id/tv_opponent_label"
                app:layout_constraintStart_toStartOf="@+id/tv_opponent_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_opponent_label"
                style="@style/team_calendar_labels"/>

            <TextView
                android:id="@+id/tv_date"
                app:layout_constraintEnd_toEndOf="@+id/tv_opponent"
                app:layout_constraintStart_toStartOf="@+id/tv_opponent"
                app:layout_constraintTop_toTopOf="@+id/tv_date_label"
                tools:text="@string/example_date"
                style="@style/team_calendar"/>

            <TextView
                android:id="@+id/tv_place_label"
                android:layout_marginTop="4dp"
                android:text="@string/calendar_place"
                app:layout_constraintEnd_toEndOf="@+id/tv_date_label"
                app:layout_constraintStart_toStartOf="@+id/tv_date_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_label"
                style="@style/team_calendar_labels"/>

            <TextView
                android:id="@+id/tv_place"
                app:layout_constraintEnd_toEndOf="@+id/tv_date"
                app:layout_constraintStart_toStartOf="@+id/tv_date"
                app:layout_constraintTop_toTopOf="@+id/tv_place_label"
                tools:text="@string/example_place"
                style="@style/team_calendar"/>

            <TextView
                android:id="@+id/tv_state_label"
                android:layout_marginTop="4dp"
                android:text="@string/calendar_state"
                app:layout_constraintEnd_toEndOf="@+id/tv_place_label"
                app:layout_constraintStart_toStartOf="@+id/tv_place_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_place_label"
                style="@style/team_calendar_labels"/>

            <TextView
                android:id="@+id/tv_state"
                app:layout_constraintEnd_toEndOf="@+id/tv_place"
                app:layout_constraintStart_toStartOf="@+id/tv_place"
                app:layout_constraintTop_toTopOf="@+id/tv_state_label"
                style="@style/team_calendar"
                tools:text="@string/example_state" />

            <View
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_week"/>

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_local_visitor"
                app:layout_constraintEnd_toStartOf="@+id/iv_thumb_victory"
                app:layout_constraintTop_toTopOf="@+id/tv_local_visitor"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                tools:text="110 - 99" />

            <ImageView
                android:id="@+id/iv_thumb_victory"
                android:layout_width="23dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:tint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_score"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_score" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
