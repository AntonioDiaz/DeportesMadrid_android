<RelativeLayout
    android:id="@+id/view_competition"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CompetitionDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_competition_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_competition_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_competition_details"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_competition_details">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_competition_details"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:visibility="invisible">
        </android.support.v4.view.ViewPager>

        <include layout="@layout/loading" />

    </android.support.constraint.ConstraintLayout>



</RelativeLayout>