<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fl_sports">

    <android.support.v7.widget.CardView
        style="@style/main_list_sports"
        android:id="@+id/cv_sports"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_sport"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:paddingBottom="4dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/tv_sport"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_sport"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/rounded_corner_dark"
                android:gravity="center"
                tools:text="Baloncesto"
                android:textColor="#ffffff"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    
</FrameLayout>

