<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_classification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_classification_position"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="right"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="12" />

    <TextView
        android:id="@+id/tv_classification_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="left|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_classification_matches"
        app:layout_constraintStart_toEndOf="@+id/tv_classification_position"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        android:textStyle="bold"
        tools:text="Atletico de Madrid" />


    <TextView
        android:id="@+id/tv_classification_matches"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_classification_matches_won"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pj" />

    <TextView
        android:id="@+id/tv_classification_matches_won"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_classification_matches_drawn"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pg" />

    <TextView
        android:id="@+id/tv_classification_matches_drawn"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_classification_matches_lost"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pe" />

    <TextView
        android:id="@+id/tv_classification_matches_lost"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_classification_goals_for"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pp" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_classification_goals_for"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_classification_goals_against"
        app:layout_constraintTop_toTopOf="parent"
        autofit:minTextSize="8sp"
        style="@style/TextDetails"
        tools:text="1099" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_classification_goals_against"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_classification_points"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        autofit:minTextSize="8sp"
        style="@style/TextDetails"
        tools:text="gf" />

    <TextView
        android:id="@+id/tv_classification_points"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pt" />


</android.support.constraint.ConstraintLayout>