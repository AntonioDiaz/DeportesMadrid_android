<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clClassification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tvClassificationPosition"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="right"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="12" />

    <TextView
        android:id="@+id/tvClassificationTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="left|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvClassificationMatches"
        app:layout_constraintStart_toEndOf="@+id/tvClassificationPosition"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        android:textStyle="bold"
        tools:text="Atletico de Madrid" />


    <TextView
        android:id="@+id/tvClassificationMatches"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvClassificationMatchesWon"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pj" />

    <TextView
        android:id="@+id/tvClassificationMatchesWon"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvClassificationMatchesDrawn"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pg" />

    <TextView
        android:id="@+id/tvClassificationMatchesDrawn"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvClassificationMatchesLost"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pe" />

    <TextView
        android:id="@+id/tvClassificationMatchesLost"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvClassificationGoalsFor"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pp" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvClassificationGoalsFor"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvClassificationGoalsAgainst"
        app:layout_constraintTop_toTopOf="parent"
        autofit:minTextSize="8sp"
        style="@style/TextDetails"
        tools:text="1099" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvClassificationGoalsAgainst"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvClassificationPoints"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        autofit:minTextSize="8sp"
        style="@style/TextDetails"
        tools:text="gf" />

    <TextView
        android:id="@+id/tvClassificationPoints"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextDetails"
        tools:text="pt" />


</android.support.constraint.ConstraintLayout>